<!-- Our Dashboard -->
<div class="dashboard_main_content" style="padding: 32px; padding-top: 64px;">
    <div class="container-fluid">
        <div class="main_content_container">
            <div class="col-sm-12 col-lg-8 col-xl-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="my_course_content_container">
                            <div class="my_setting_content mb30">
                                <div class="my_setting_content_header">
                                    <div class="my_sch_title">
                                        <h1 class="m0 text-center text-dark">Personal Details</h1>
                                    </div>
                                </div>

                                <div class="row justify-content-center align-center my_setting_content_details pb0">
                                    <div class="col-xl-6">
                                        <div class="password_change_form text-center">
                                            <form id="mainForm" method="POST" action="/user/profile/update">
                                                <div class="form-group">
                                                    <label>Email: {{user.email}}</label>
                                                </div>
                                                <div class="form-group">
                                                    <label>Username:</label>
                                                    <input class="form-control" id="username" name="username"
                                                        placeholder="{{user.username}}">
                                                </div>
                                                <div class="form-group">
                                                    <label>Old Password</label>
                                                    <input type="password" class="form-control mb0"
                                                        id="confirm-password" name="confirm_password">
                                                </div>
                                                <div class="form-group">
                                                    <label>New Password</label>
                                                    <input type="password" class="form-control" id="new-password"
                                                        name="new_password">
                                                </div>
                                                {{#if this.error}}
                                                <div class="mt-3 mb-3">
                                                    <p class="text-danger">{{this.error}}</p>
                                                </div>
                                                {{/if}}
                                                {{#if this.success}}
                                                <div class="mt-3 mb-3">
                                                    <p class="text-success">{{this.success}}</p>
                                                </div>
                                                {{/if}}
                                                <div class="row my_setting_content_details text-center">
                                                    <div class="col-lg-12">
                                                        <button type="submit"
                                                            class="my_setting_savechange_btn btn btn-success mt-3"
                                                            id="update-button">Update
                                                            <span class="flaticon-right-arrow-1 ml15"></span></button>
                                                        <span id="change-errorPass" style="margin-left: 20px;"
                                                            class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<script>
    const mainForm = document.getElementById('mainForm');

    mainForm.addEventListener('submit', (e) => {
        const username = document.getElementById('username').value;
        const new_password = document.getElementById('new-password').value;
        const confirm_password = document.getElementById('confirm-password').value;

        if (!new_password) {
            alert('Please enter your password');
            e.preventDefault();
        }
        if (!confirm_password) {
            alert('Please enter new password');
            e.preventDefault();

        }
    })
</script>