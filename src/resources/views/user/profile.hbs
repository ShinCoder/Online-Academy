<!-- Our Dashboard -->
<div class="dashboard_main_content" style="padding: 32px; padding-top: 64px;">
    <div class="container-fluid">
        <div class="main_content_container" style="padding-top: 60px;">
                <div class="col-sm-12 col-lg-8 col-xl-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="dashboard_navigationbar dn db-1199">
                                <div class="dropdown">
                                    <button onclick="myFunction()" class="dropbtn"><i class="fa fa-bars pr10"></i>
                                        Dashboard Navigation</button>
                                    <ul id="myDropdown" class="dropdown-content">
                                        <li><a href="/user/profile"><span
                                                    class="flaticon-online-learning"></span> Profile</a></li>
                                        <li><a href="/user/courses"><span
                                                    class="flaticon-online-learning"></span> My Courses</a></li>
                                        <li><a href="/user/watchlist"><span
                                                    class="flaticon-online-learning"></span> Watchlist</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="my_course_content_container">
                                <div class="my_setting_content mb30">
                                    <div class="my_setting_content_header">
                                        <div class="my_sch_title">
                                            <h4 class="m0">Personal Details</h4>
                                        </div>
                                    </div>

                                    <div class="row my_setting_content_details pb0">
                                        <div class="col-xl-6">
                                            <div class="password_change_form">
                                                <form>
                                                    <div class="form-group">
                                                        <label>Email: {{user.email}}</label>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Authority: {{user.authority}}</label>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Username:</label>
                                                        <input class="form-control"
                                                            id="username" placeholder="{{user.username}}">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>New Password</label>
                                                        <input type="password" class="form-control"
                                                            id="new-password">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Confirm Password</label>
                                                        <input type="password" class="form-control mb0"
                                                            id="confirm-password">
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row my_setting_content_details">
                                        <div class="col-lg-12">
                                            <button type="submit" class="my_setting_savechange_btn btn btn-thm" id="update-button">Update
                                                <span class="flaticon-right-arrow-1 ml15"></span></button>
                                            <span id="change-errorPass" style="margin-left: 20px;"
                                                class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const update = document.getElementById('update-button');
    
    update.addEventListener('click', async () => {
        const username = document.getElementById('username').value;
        const new_password = document.getElementById('new-password').value;
        const confirm_password = document.getElementById('confirm-password').value;

        if (!confirm_password) {
            alert('Please enter your password');
            return;
        }

        let response = await fetch('/user/profile/update', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                username: username,
                new_password: new_password,
                confirm_password: confirm_password
            })
        });

        let data = await response.json();
        console.log(data);
        let newUsername = document.getElementById('username');
        newUsername.placeholder = data.username;

        if (data.status !== 404) {
            alert(data.message);
        } else {
            alert(data.message);
        }
    })
</script>