{{#section 'css'}}
<link rel="stylesheet" href="/css/course/createChapter.css">
{{/section}}

<form method="post" action="/courses/chapters/create" id="chapterForm">
    <div class="d-flex justify-content-center">
        <h1 class="text-primary">Course</h1>
    </div>

    <div class="chapterDetailWrapper">
        <div class="course-header-wrapper">
            <input autocomplete="off" id="chapterTitle" name="chapterTitle" type="text" class="form-control"
                placeholder="Please fill in chapter title" />
            <p id="chapterTitleError" class="d-none text-danger">Please fill in this field !</p>
        </div>

        <div class="addChapterButtonWrapper d-flex justify-content-between">
            <button id="backBtn" type="button" class="btn btn-secondary btn-lg">
                <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
                Go to another course
            </button>

            <button id="addChapterBtn" type="submit" class="btn btn-primary btn-lg">
                <i class="fa fa-plus-square" aria-hidden="true"></i>
                Add this chapter
            </button>
        </div>
    </div>

</form>

{{#section 'js'}}
<script src="/javascript/course/createChapter.js"></script>
{{/section}}