{{#section 'css'}}
<link rel="stylesheet" href="/css/course/updateLesson.css">
{{/section}}

<form method="post" action="/courses/{{this.courseId}}/chapters/{{this.chapterId}}/lessons/{{this.lessonId}}/update" id="lessonForm" enctype="multipart/form-data">

    <div class="lesson-header-wrapper">
        <input value="{{title}}" autocomplete="off" id="lessonTitle" name="lessonTitle" type="text" class="form-control"
            placeholder="Please fill in lesson title" />
        <p id="lessonNameInputError" class="d-none text-danger">Please fill in this field !</p>
    </div>

    <div class="richTextWrapper">
        <h1 class="courseDetailTitle">Lesson Description</h1>
        <textarea name="lessonDescription" id="lessonDescription">
            {{description}}
        </textarea>
        <p id="lessonDescriptionError" class="d-none text-danger">Please fill in lesson description !</p>
    </div>

    <div class="richTextWrapper">
        <h1 class="courseDetailTitle">Lesson Video</h1>
        <input class="uploadLessonVideo" id="uploadLessonVideo" name="uploadLessonVideo" type="file"
            accept="video/mp4" />
        <button id="addVideoToLessonBtn" type="button" class="btn btn-info addVideoToLessonBtn">
            <i class="fa fa-plus-square" aria-hidden="true"></i> Upload lesson video
        </button>
        <div id="videoWrapper">
            <video id="videoSource" preload="auto" controls class="video-js vjs-default-skin lessonVideo">
                <source type="video/mp4" src="/videos/lessons/{{video_filename}}" />
            </video>
        </div>
        <p id="lessonVideoError" class="d-none text-danger">Please choose a video for this lesson !</p>
    </div>

    <div class="d-flex justify-content-between my-3">
        <a id="backBtn" href="/courses/{{this.courseId}}/chapters/update" class="btn btn-secondary btn-lg">
            <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
            Back
        </a>

        <button type="submit" class="btn btn-success btn-lg">
            <i class="fa fa-book" aria-hidden="true"></i> Update lesson
        </button>
    </div>
</form>

{{#section 'js'}}
<script src="/javascript/course/updateLesson.js"></script>
{{/section}}