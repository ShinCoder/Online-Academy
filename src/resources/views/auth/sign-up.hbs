{{#section 'css'}}
  <link rel='stylesheet' href='/css/bootstrap.min.css'>
  <link rel='stylesheet' href='/css/authentication.css'>
{{/section}}

<div class='vertical-center'>
  <div class='container'>
    <div class='row justify-content-center'>
      <div class='col-md-8'>
        {{#if success}}
          <div class='alert alert-success alert-dismissible fade show'>
            <strong>{{success}}</strong>
          </div>
        {{/if}}

        {{#if error}}
          <div class='alert alert-danger alert-dismissible fade show'>
            <strong>{{error}}</strong>
          </div>
        {{/if}}

        <div class='card card-default'>
          <div class='card-header'>Sign Up</div>
          <div class='card-body'>
            <form action='' id='sign-up' method='post'>
              <div class='row mb-3'>
                <div class='col-xs-12 col-md-6'>
                  <div class='form-floating'>
                    <input type='text' class='form-control' id='first_name' name='first_name' required autofocus autocomplete='on'>
                    <label for='first_name'>First name</label>
                  </div>
                </div>
                <div class='col-xs-12 col-md-6'>
                  <div class='form-floating'>
                    <input type='text' class='form-control' id='last_name' name='last_name' required autofocus autocomplete='on'>
                    <label for='last_name'>Last name</label>
                  </div>
                </div>
              </div>
              <div class='row mb-3'>
                <div class='col-xs-12 col-md-12'>
                  <div class='form-floating'>
                    <input type='email' class='form-control' id='email' name='email' required autofocus autocomplete='on'>
                    <label for='email'>Email</label>
                  </div>
                </div>
              </div>
              <div class='row mb-3'>
                <div class='col-xs-12 col-md-6'>
                  <div class='form-floating'>
                    <input type='password' class='form-control' id='password' name='password' required autofocus autocomplete='off'>
                    <label for='password'>Password</label>
                  </div>
                </div>
                <div class='col-xs-12 col-md-6'>
                  <div class='form-floating'>
                    <input type='password' class='form-control' id='confirm_password' name='confirm_password' required autofocus autocomplete='off'>
                    <label for='confirm_password'>Confirm Password</label>
                  </div>
                </div>
              </div>

              <div class='text-center mb-3'>
                Forgot password? Click <a href='./recovery-password'> here </a> to recovery password!
              </div>
              
              <div class='form-group row mb-3'>
                <button type='submit' class='btn btn-primary'>
                  Sign Up
                </button>
              </div>

              <div class='text-center mb-3'>
                Already have accounts? Click <a href='./sign-in'> here </a> to sign in!
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{#section 'js'}}
  <link rel='stylesheet' href='/javascript/bootstrap.min.js'>

  {{#if success}}
    <script>
      setTimeout(() => {
        document.location.replace('./sign-in');
      }, 5000);
    </script>
  {{/if}}

{{/section}}